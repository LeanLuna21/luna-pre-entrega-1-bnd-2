{{>navigation}}
<!-- 3 columns main content -->
<main class="row m-0">
    <aside class="col-sm-0 col-lg-1"></aside>

    <!-- main content sections: carousel/menu-products/cart -->
    <article class="col-sm-12 col-lg-10">

        <!-- carousel -->
        <section id="mainCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/banner-1.png" class="d-block w-100" alt="promo-menu">
                </div>
                <div class="carousel-item">
                    <img src="/img/banner-2.png" class="d-block w-100" alt="delicias-banner">
                </div>
                <div class="carousel-item">
                    <img src="/img/banner-3.png" class="d-block w-100" alt="vegan-menu-available">
                </div>
            </div>
            <button class="carousel-control-prev p-auto" type="button" data-bs-target="#mainCarousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next p-auto" type="button" data-bs-target="#mainCarousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </section> <!-- fin carousel -->

        <div id="start-order"> </div>

        <section id="comidas">
            <div id="comidas-title-bar">
                <H1 class="title"> Nuestro menu </H1>
                <div class="dropdown">
                    <button class="btn btn-warning dropdown-toggle px-5" type="button" id="dropdownMenuButton"
                        data-toggle="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Filtrar por...
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/">(todos)</a>
                        {{#each categories}}
                        <a class="dropdown-item" href="/?filter={{this}}">{{this}}</a>
                        {{/each}}
                    </div>
                </div>
                {{#if admin}}
                <a href="/add-product/" role="button" class="btn btn-outline-warning btn-lg">
                    <i class="fa-solid fa-plus mx-2"> </i>
                    Nuevo Producto
                </a>
                {{/if}}
            </div>
            <div id="menu-comidas" class="menu-options">
                {{#each menuItems.docs}}
                <div class="menu-card" id={{this.code}}>
                    <img src={{this.img}} alt={{this.title}}>
                    <div class="menu-card-info">
                        <h3> {{this.title}} </h3>
                        <p>{{this.description}}</p>
                        <div class="price-button">
                            <b>$ {{this.price}}</b>
                            {{#if ../admin}}
                            <button class="add-to-cart"><a href="/edit-product/{{this._id}}" class="d-inline"> <i
                                    class="fa fa-pencil mx-2"></i></a></button>
                            {{else}}
                                {{#if ../user}}
                                <button class="add-to-cart" data-id={{this._id}}>Agregar</button>
                                {{else}}
                                <a href="/login"><button class="add-to-cart">Agregar</button></a>
                                {{/if}}
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <nav aria-label="Page Navigation my-5">
                <ul class="pagination justify-content-center py-3">
                    {{#if menuItems.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{menuItems.prevPage}}&limit={{menuItems.limit}}"
                            aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>
                    </li>
                    {{/if}}
                    {{#each menuItems.pageNumbers}}
                    <li class="page-item {{#if this.isCurrent}}active {{/if}}">
                        <a class="page-link" href="?page={{this.number}}&limit={{this.limit}}">{{this.number}}</a>
                    </li>
                    {{/each}}
                    {{#if menuItems.hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{menuItems.nextPage}}&limit={{menuItems.limit}}"
                            aria-label="Next"><span aria-hidden="true">&raquo;</span></a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </section>

        <!-- carrito (js) -->
        <section id="seccion-carrito" class="hidden-box">
            <h2 class="subtitle">Detalle de tu orden:</h2>
            <section id="content-carrito">

                <!-- detalle de pedidos realizados (js) -->
                <section id="contenedor-pedidos">

                </section>

                <div class="contenedor-importe-total">

                </div>

            </section>
            <!-- boton carrito (js) -->
            <div id="cart-button">

            </div>
        </section>

    </article> <!-- main article content end -->

    <aside class="col-sm-0 col-lg-1"></aside>
</main> <!-- main content end -->

{{>footer}}